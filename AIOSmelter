  ClearDebug;
  {$IFDEF SIMBAMAJOR980}
    SMART_SERVER := 24;
    SMART_MEMBERS := MEMBERS;
    SMART_SIGNED := TRUE;
    SMART_SUPERDETAIL := FALSE;
  {$ELSE}
    SMART_FIXSPEED := TRUE;
  {$ENDIF}
  ActivateClient;
  SetupSRL;
  LoadOreInfo;
  SRL_SixHourFix := True;
  DTMS;
  DeclarePlayers;
  if not (LoggedIn) then
  LoginPlayer;
  Wait(4000 + Random(400));
  StartEXP := GetXPBarTotal;
  FindNormalRandoms;
  repeat}
  until(False)
  AddOnTerminate('FR33DTMS');}
end.
