            begin
              MMouse(x, y, 0, 0);
              if IsUpText('oal') then
              begin
                ClickMouse2(False);
                if (not(ChooseOption('24'))) then
                begin
                  Chooseoption('X');
                  TypeSendEx('24', True);
                end else ChooseOption('24');
              end;
